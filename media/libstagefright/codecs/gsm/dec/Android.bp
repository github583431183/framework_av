cc_library_shared {
    name: "libstagefright_soft_gsmdec",
    vendor_available: true,
    vndk: {
        enabled: true,
    },

    srcs: ["SoftGSM.cpp"],

    include_dirs: [
        "frameworks/av/media/libstagefright/include",
        "frameworks/native/headers/media_plugin/media/openmax",
        "external/libgsm/inc",
    ],

    cflags: ["-Werror"],

    sanitize: {
        misc_undefined: [
            "signed-integer-overflow",
            "unsigned-integer-overflow",
        ],
        cfi: true,
        diag: {
            cfi: true,
        },
    },

    shared_libs: [
        "libmedia_omx",
        "libstagefright_omx",
        "libutils",
        "liblog",
    ],

    static_libs: ["libgsm"],
    compile_multilib: "32",
}
