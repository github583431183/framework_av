cc_defaults {
    name: "libstagefright_filters_fuzzer",
    header_libs: [
         "libmediadrm_headers",
    ],
    static_libs: [
        "libRSDispatch",
        "libRScpp",
        "libstagefright_mediafilter",
        "libc++fs",
    ],
    shared_libs: [
        "libgui",
        "libstagefright",
        "libutils",
        "libstagefright_foundation",
        "liblog",
        "libRS_internal",
        "libmedia_omx",
        "libui",
        "libstagefright_codecbase",
    ],
    fuzz_config: {
        cc: [
            "android-media-fuzzing-reports@google.com",
        ],
        componentid: 155276,
    },
}

cc_fuzz {
    name: "libstagefright_mediafilter_fuzzer",
    srcs: [
        "libstagefright_mediafilter_fuzzer.cpp",
    ],
    defaults: [
        "libstagefright_filters_fuzzer",
    ],
}

cc_fuzz {
    name: "libstagefright_colorconvert_fuzzer",
    srcs: [
        "libstagefright_colorconvert_fuzzer.cpp",
    ],
    defaults:[
        "libstagefright_filters_fuzzer",
    ],
}
