// AV  media utils extension
// ########################################################
cc_library_headers {
    name: "libmediavendorext_default_headers",
    export_include_dirs: ["include"],
    vendor_available: true,
}

cc_library_static {
    name: "libmediavendorext_default",
    vendor_available: true,
    vndk: {
        enabled: true,
    },

    srcs: [
         "MediaVendorExt.cpp",
    ],

    shared_libs: [
         "libhidlbase",
         "liblog",
         "libui",
         "libgui",
         "libcutils",
         "libutils",
         "libnativewindow",
         "libcrypto",
         "android.hardware.media.omx@1.0",
         "libhidlbase",
         "libhidlmemory",
         "android.hidl.allocator@1.0",
         "android.hidl.memory@1.0",
    ],

    header_libs: [
        "media_plugin_headers",
        "libstagefright_headers",
    ],

    export_header_lib_headers: [
        "media_plugin_headers",
        "libstagefright_headers",
    ],

    export_include_dirs: [
         "include",
    ],

    include_dirs: [
         "frameworks/av/media/libstagefright/omx/include",
         "frameworks/av/media/libstagefright/xmlparser/include",
         "frameworks/av/media/libmedia/include",
         "frameworks/av/include",
         "frameworks/av/media/ndk/include",
         "frameworks/av/media/libaudioclient/include",
         "frameworks/av/media/libstagefright/foundation/include",
         "hardware/amlogic/media/ammediaext",
    ],

    cflags: [
        "-Wno-multichar",
        "-Werror",
    ],
}
