    name: "libcodec2-aidl-client-defaults",
    min_sdk_version: "34",
    defaults: ["libcodec2-impl-defaults"],

    shared_libs: [
        "android.hardware.media.c2-V1-ndk",
        "libcodec2_aidl_client",
    ],
}
