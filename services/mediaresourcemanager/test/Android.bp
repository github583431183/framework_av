}

cc_test {
    name: "ResourceManagerService_test",
    srcs: ["ResourceManagerService_test.cpp"],
    test_suites: ["device-tests"],
    static_libs: ["libresourcemanagerservice"],
    shared_libs: [
        "libbinder",
        "libbinder_ndk",
        "liblog",
        "libmedia",
        "libutils",
    ],
    include_dirs: [
        "frameworks/av/include",
        "frameworks/av/services/mediaresourcemanager",
    ],
    cflags: [
        "-Werror",
        "-Wall",
    ],
}

